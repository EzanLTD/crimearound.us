<h1 class=<%= crime_type %>><%= primary_type %> - <%= description %></h1>
<p><i><%= typeof location_description !== 'undefined' ? location_description : '' %></i></p>

Arrest? 
<% if(arrest == 'true' || arrest == true){ %> 
    Yes
<% } else { %> 
    No
<% } %> 
|
Domestic?
<% if(domestic == 'true' || domestic == true){ %> 
    Yes
<% } else { %> 
    No
<% } %>
<hr />
<p><i class="glyphicon glyphicon-time"></i> <%= moment(orig_date).format('dddd MMM D, YYYY h:mma') %></p>
<p>
<i class="glyphicon glyphicon-map-marker"></i>
<%= block %><br />
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ward</th>
            <th>Beat</th>
            <th>Community</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= typeof ward !== 'undefined' ? ward : '' %></td>
            <td><%= typeof beat !== 'undefined' ? beat : '' %></td>
            <td><%= community_area %></td>
        </tr>
    </tbody>
</table>
